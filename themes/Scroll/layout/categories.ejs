<div id="app">
    <div id="content">
        <%- include('nav.ejs') %>
        <div id="title">
          <h1>
              <span style="font-size: 1em;">
                  <%= page.title %><br>
              </span>
              <% if(page.subtitle!=null) { %>
              <p style="font-size: 0.5em;margin-top: 10px;">
                  <%= page.subtitle %><br>
              </p>
              <% } %>
          </h1>
      </div>
        <div id="article">
            <%- page.content %>
            <% site.categories.map(function(category){  %>
                <a id="categorieTage" href="#<%= category.name %>" title="<%= category.name %>" rel="<%= category.length %>"><%= category.name %></a>
            <% }) %>
            <br>
            <% site.categories.map(function(category){  %>
                <div class="one-tag-list">
                  <span id="<%= category.name %>">
                    <span class="tag-text"><%= category.name %></span>
                  </span>
                  <% category.posts.map(function(post){  %>
                            
                  <div class="post-preview">
                    <a href="<%- config.root %><%- post.path %>">
                      <h2 class="post-title">
                        <%- post.title || "Untitled" %>
                        
                      </h2>
                      <% if (post.subtitle && post.subtitle.length) { %>
                      <h3 class="post-subtitle">
                        <%- post.subtitle %>
                      </h3>
                      <% } %>
                      
                    </a>
                  </div>
                  
                <% }) %>
                </div>
            <% }) %>


            <br>
            <hr>
            <br>
                <div id="article-next">
                    <a href="<%= config.root %>" data-toggle="tooltip" data-placement="top" title="<%- config.title %>">返回首页 &rarr;</a>
                </div>
            <br><br>
            <hr>
        </div>
    </div>
</div>